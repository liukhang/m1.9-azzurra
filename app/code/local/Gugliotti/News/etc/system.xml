<?xml version="1.0" encoding="utf-8" ?>
<config>
    <sections>
        <gugliotti_news module="gugliotti_news" translate="label">
            <label>Gugliotti News</label>
            <tab>general</tab>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general module="gugliotti_news" translate="label">
                    <label>General Configuration</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <tooltip>Is this module enabled?</tooltip>
                        </enabled>
                    </fields>
                </general>
                <logs module="gugliotti_news" translate="label">
                    <label>Logs</label>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <log_enabled translate="label">
                            <label>Enabled</label>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <tooltip>Is the log enabled? Remember that logging must be enabled also on Developer tab, here on System > Configuration menu.</tooltip>
                        </log_enabled>
                        <log_file translate="label">
                            <label>Log file</label>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <frontend_type>text</frontend_type>
                            <tooltip>Inform the log file named, which will be created on /var/log folder on the server.</tooltip>
                        </log_file>
                    </fields>
                </logs>
            </groups>
        </gugliotti_news>
    </sections>
</config>